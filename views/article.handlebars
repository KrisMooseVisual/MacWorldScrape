<div class="row">
    <h2 class="card">{{article.title}}</h2>
    <h5 class="card-panel articleBody">{{body}}</h5>
</div>

<div>
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
        <h5>Comment on this Article</h5>
        <div class="row">
            <div class="input-field">
                <input id="icon_prefix" type="text" placeholder="Name" name="name">
            </div>
            <div class="input-field">
                <i class="material-icons prefix">Your Thoughts</i>
                <input id="icon_telephone" type="text" placeholder="Comment" name="comment">
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-button topnav" type="submit" value="Submit"></center>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Comments:</h5>
        {{#if article.comment}}
        {{#each article.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}<p>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}

    </div>
</div>